<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:id="@+id/activityFormulario_2"
    android:background="@android:color/darker_gray"
    tools:context="giovanni.itt.form.MainActivity">

    <TextView
        android:id="@+id/textFormulario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FORMULARIO"
        android:textSize="@dimen/textViewFormulario"
        android:textStyle="bold"
        android:gravity="center"

        />

    <EditText android:id="@+id/txtNombre"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="Nombre"
        android:inputType="text" />

    <EditText android:id="@+id/txtVilla"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:hint="Direccion"
        android:inputType="text" />

    <EditText android:id="@+id/txtTelefono"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:hint="Telefono"
        android:inputType="text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bfecha"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Fecha_Pick"
            android:text="Fecha" />

        <EditText
            android:id="@+id/txtFecha"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:inputType="text" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

       <!-- <DatePicker
            android:id="@+id/simpleDatePicker"
            android:layout_width="443dp"
            android:layout_height="315dp"
            android:datePickerMode="spinner"
            android:layout_weight="0.22" />
                -->

        <Button
            android:id="@+id/ButtonEnviar"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="Enviar" />


    </LinearLayout>

</LinearLayout>





